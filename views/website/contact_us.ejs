<section class="htc__contact__area ptb--100 bg__white">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12 col-xs-12">
                <div class="map-contacts--2">
                    <div id="googleMap"></div>
                </div>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12 col-xs-12">
                <h2 class="title__line--6">CONTACT US</h2>
                <div class="address">
                    <div class="address__icon">
                        <i class="icon-location-pin icons"></i>
                    </div>
                    <div class="address__details">
                        <h2 class="ct__title">our address</h2>
                        <p>#475, Office Block, Mohali (160062) </p>
                    </div>
                </div>
                <div class="address">
                    <div class="address__icon">
                        <i class="icon-envelope icons"></i>
                    </div>
                    <div class="address__details">
                        <h2 class="ct__title">Mail Us</h2>
                        <p>xyz@hackjaipur.com </p>
                    </div>
                </div>

                <div class="address">
                    <div class="address__icon">
                        <i class="icon-phone icons"></i>
                    </div>
                    <div class="address__details">
                        <h2 class="ct__title">Phone Number</h2>
                        <p>123-6586-587456</p>
                    </div>
                </div>
            </div>      
        </div>
        <div class="row">
            <div class="contact-form-wrap mt--60">
                <div class="col-xs-12">
                    <div class="contact-title">
                        <h2 class="title__line--6">Any Query? Fill this form</h2>
                    </div>
                </div>
                <div class="col-xs-12">
                    <form id="contact-form" action="/contact-us-form" method="post">
                        <div class="single-contact-form">
                            <div class="contact-box name">
                                <input type="text" name="name" placeholder="Your Name*" required>
                                <input type="email" name="email" placeholder="Mail*" required>
                            </div>
                        </div>
                        <div class="single-contact-form">
                            <div class="contact-box subject">
                                <input type="text" name="title" placeholder="Enter Title of ur Query*" required>
                            </div>
                        </div>
                        <div class="single-contact-form">
                            <div class="contact-box message">
                                <textarea name="message" placeholder="Your Message"></textarea>
                            </div>
                        </div>
                        <% if(locals.user){ %>
                            <div class="contact-btn">
                                <button type="submit" class="fv-btn">Send MESSAGE</button>
                            </div>
                        <% } else {%>
                            <div class="contact-btn">
                                <button type="submit" class="fv-btn btn btn-disabled" disabled>Send MESSAGE</button>
                            </div>
                        <% } %>
                        
                    </form>
                    <div class="form-output">
                        <p class="form-messege"></p>
                    </div>
                </div>
            </div> 
        </div>
    </div>
</section>
<!-- End Contact Area -->

